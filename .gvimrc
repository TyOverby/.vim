colo base16-ocean-mono
autocmd BufRead,BufNewFile * colorscheme base16-ocean-mono
set background=dark
" Remove all toolbars
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
" Disable mouse
"
set mouse=c
set guifont=Dejavu\ Sans\ Mono\ for\ Powerline\ 10
set linespace=-2
let g:airline_theme="base16"
set guiheadroom=0
