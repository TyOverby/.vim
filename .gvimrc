colo base16-ocean
autocmd BufRead,BufNewFile * colorscheme base16-ocean
set background=dark
" Remove all toolbars
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
" Disable mouse
"
set mouse=c
"set guifont=Dejavu\ Sans\ Mono\ for\ Powerline\ 10
set guifont=Office\ Code\ Pro\ Medium\ 11
set linespace=0
let g:airline_theme="base16"
set guiheadroom=0
